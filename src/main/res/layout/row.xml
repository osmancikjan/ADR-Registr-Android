<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/textKemler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textUN"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:width="50dp"
        android:background="@android:color/holo_orange_dark"
        android:text="22X"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textUN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textKemler"
        android:layout_marginStart="10dp"
        android:width="50dp"
        android:background="@android:color/holo_orange_dark"
        android:text="1203"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textKemler" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/textUN"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textKemler"
        android:layout_toEndOf="@+id/textKemler"
        android:paddingEnd="16dp"
        android:paddingStart="8dp"
        android:text="TextView"
        android:textColorLink="@android:color/holo_orange_dark"
        android:textSize="12sp" />

</RelativeLayout>