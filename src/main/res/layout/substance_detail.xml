<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/kemlerText"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/unText"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/unText"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/unText"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/kemlerText"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/kemlerText"
        android:text="TextView"
        android:textSize="12dp" />

    <Button
        android:id="@+id/callBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/nameText"
        android:layout_below="@+id/nameText"
        android:layout_marginTop="11dp"
        android:background="@drawable/emergency" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/unText"
        android:layout_alignTop="@+id/callBtn"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/callBtn"
        android:justificationMode="inter_word"
        android:text="TextView"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text1"
        android:layout_below="@+id/text1"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@+id/callBtn"
        android:justificationMode="inter_word"
        android:text="TextView"
        android:textAlignment="inherit" />
</RelativeLayout>